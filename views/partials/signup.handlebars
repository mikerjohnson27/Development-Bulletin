            <input type="email" class="form-control" id="email">
        </div>
        <div class="input-group bg-success m-1">
            <span class="input-group-text bg-success text-white m-1" id="">Password</span>
            <input type="password" class="form-control" id="password">
        </div>
        <div class="input-group m-1">
            <span class="input-group-text bg-success text-white m-1" id="">Manager</span>
            <input type="checkbox" class="form-control" id="manager">
        </div>
        </div>
